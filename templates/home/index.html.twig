{% extends 'base.html.twig' %}

{% block title %}SeeTickets{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{# HEADER #}

<header>
    <div class="headerContent">
        <div class="headerTitle">
            <h1>MC SOLAAR</h1>
            <h2>En Tournée</h2>
        </div>
    </div>
    <div class="headerButtons">
        <button>+ d'infos</button>
        <button>+ réserver</button>
        <button>+ ma liste</button>
    </div>
</header>

{# MAIN #}

<main class="container mt-5">






<h1 class= "ms-2"> Meilleures ventes </h1>

 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for i in 0..20 %}
                <li data-target="#carouselExampleIndicators" data-slide-to="{{ i }}" {% if i == 0 %}class="active"{% endif %}></li>
            {% endfor %}
        </ol>
        <div class="carousel-inner">
            {% set active = true %}
         <div class="row">

            {% for event in events %}

                <div class="carousel-item {% if active %}active{% endif %}">
                          <div class="card mt-5">
                            <div class="card-body">

                                <img class="d-block w-100" src="https://via.placeholder.com/800x400?text=Slide+4" alt="Slide 4">

                                <h5 class="card-title">{{ event.eventName }}</h5>
                                
                            </div>
                        </div>
                        </div>
                {% set active = false %}
            {% endfor %}
                                        </div>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

 





      

<h1 class= " ms-2 mt-5"> Découvrir par categories </h1>

            {% for categorie in category %}


                          <div class="container mt-5 mb-5">
                                    <div class="banner ">
                                        <img src="https://via.placeholder.com/800x400?text=Slide+4" alt="Bannière">
                                        <div class="banner-content   ">
                                        <h1 >{{categorie.categoryName}}</h1>
                                        </div>
                                     </div>
                                    </div>
                                        
                                        

            {% endfor %}


</main>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}
