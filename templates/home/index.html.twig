{% extends 'base.html.twig' %}

{% block title %}SeeTickets{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{# HEADER #}

<header>
    <div class="headerContent">
        <div class="headerTitle">
            <h1>MC SOLAAR</h1>
            <h2>En Tournée</h2>
        </div>
    </div>
    <div class="headerButtons">
        <button>+ d'infos</button>
        <button>+ réserver</button>
        <button>+ ma liste</button>
    </div>
</header>

{# MAIN #}

<main class="container">

    {{dump(users)}}
    
    {# MEILLEURES VENTES #}

    <section class="row meilleuresVentes d-flex justify-content-around">


    {% for event in events %}


        <div class="card col-3" style="width: 18rem;">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
                <h1 class="card-text">{{event.eventName}}</h1>

                <h2 class="card-text">{{event.category.categoryName}}</h2>
                <h2 class="card-text">{{event.organisationName}}</h2>
                <p class="card-text">{{event.eventPlace}}</p>
                <p class="card-text">prix: {{event.eventPrice}} €</p>
            </div>
        </div>
    {% endfor %}

      

    </section>

</main>
{% endblock %}
