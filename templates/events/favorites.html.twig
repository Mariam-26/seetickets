{% extends 'base.html.twig' %}

{% block title %}Favorites{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mes favoris ✅</h1>

    {% if favoris %}
        <div class="container text-center">
			<div class="row overflow-container">
				{% for event in favoris %}
					<div class="col-md-4">
						<div class="card mb-1">
							<div class="card-body">
								<a href="/event_details/{{event.id}}">
									<img class="imgTop20" src="{{asset('images/05-posters/' ~ event.eventImage)}}"/>
								</a>
							</div>
						</div>
						<h5 class="card-title">{{ event.eventName }}</h5>
						<a href="{{ path('app_remove_favorite', { id: event.id}) }}" class="btn rounded-1 btn-primary ">Retirer de mes favoris</a>

					</div>
				{% endfor %}
			</div>
		</div>
    {% else %}
    <p>pas de favori enregistré</p>
    {% endif %}

</div>
{% endblock %}
  