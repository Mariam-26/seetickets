{% extends 'base.html.twig' %}

{% block title %}Page Search{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="searchBar">


        <form class="mt-5 text-center" action="{{ path('search_Result') }}" method="get">
            <input type="text" name="query" placeholder="Rechercher...">
            <button type="submit">Rechercher</button>
        </form>


        <h1 class="text-center mt-5">RÃ©sultats de la recherche pour "{{ query }}" :</h1>

        <div class="container text-center mt-5">
            <div class="row overflow-container">
                {% for event in events %}
                <div class="col-md-4">
                    <div class="card mb-1">
                        <div class="card-body">
                            <a href ="/event_details/{{event.id}}"> 
                            
                            <img class="imgTop20" src="{{asset('images/05-posters/' ~ event.eventImage)}}"/>

                            </a>
                        </div>
                    </div>
                            <h5 class="card-title">{{ event.eventName }}</h5>
                </div>
                {% endfor %}
            </div>
        </div>
       


    </div>

{% endblock %}
 

 
