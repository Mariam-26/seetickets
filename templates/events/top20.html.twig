{% extends 'base.html.twig' %}

{% block title %}Le top 20 des évènements{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{# HEADER #}

<header class="banner text-white">
      <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="banner-content">
                    <div class="headerTitle">
                        <h1>MC SOLAAR</h1>
                        <h2>En Tournée</h2>
                    </div>
                    <div class="headerButtons">
                        <button>+ d'infos</button>
                        <button>+ réserver</button>
                        <button>+ ma liste</button>
                    </div>
                </div>
            </div>
        </div>
        {{dump(top20)}}
</div>

{# MAIN #}

<main class="container mt-5">

 <h1 class="mt-5 text-center"> Le top 20 des événements : </h1>


<div class="container text-center mt-5">
    <div class="row ">
        {% for event in top20 %}
        <div class="col-md-4">
            <div class="card mb-1">
                <div class="card-body">
                    <a href ="/event_details/{{event.id}}"> 
                     
                     <img class="imgTop20" src="{{asset('images/05-posters/' ~ event.event_image)}}"/>

                    </a>
                </div>
                    <h5 class="card-title">{{ event.event_name }}</h5>
            </div>
        </div>
        {% endfor %}
    </div>
</div>



</main>


</main>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}