{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	{# DEBUT CONTAINER #}
	<div
		class="container mt-5 mb-5 login">
		{# FORMULAIRE DE CONNEXION #}
		<form action="{{ path('app_login') }}" method="post" name="login">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}
			{% if app.user %}
				<div class="mb-3">
					<p>Vous êtes connecté en tant que</p>
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">
						<span class="deconnecter">Se déconnecter</span>
					</a>
				</div>
			{% endif %}
			<h1 class="mb-3 font-weight-normal">Veuillez vous connecter</h1>
			{# MAIL #}
			<label for="inputEmail">E-mail</label>
			<input
			type="email" value="{{ 'email' }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			{# MOT DE PASS #}
			<label for="inputPassword">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			{# BOUTTON DE CONNEXION  #}
			<button class="btn btn-lg btn-primary mt-5 rounded" type="submit">
				Se connecter
			</button>
			<div class="linkConnexion mt-4">
				<a href="{{ path('app_register') }}">
						Créer un compte
				</a>
			</div>
			<div class="linkConnexion mt-4">
				<a href="{{ path('app_forgot_password') }}">
					Mot de passe oublié
				</a>
			</div>
		</form>
		{# FIN FORMULAIRE DE CONNEXION #}
	</div>
	{# FIN CONTAINER #}
{% endblock %}
