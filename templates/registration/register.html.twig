{% extends 'base.html.twig' %}
{# MON TITLE #}
{% block title %}Inscription
{% endblock %}

{% block body %}
	{# DEBUT CONTAINER #}
	<div class="container mt-5 mb-5 inscription">

	{% for message in app.flashes('error') %}
		<div class="col-xs4">
			<div class="p-3 my-2 rounded-2 error light-4 text-red text-dark-4">{{ message }}</div>
		</div>
	{% endfor %}

		<h1>Page d'inscription</h1>
        {# L'AFFICHAGE DES ELEMENTS DE MON FORMULAIRE D'INSCRIPTION #}
		{{ form_errors(registrationForm) }}
{{ form_start(registrationForm) }}
{{ form_row(registrationForm.user_firstname) }}
{{ form_row(registrationForm.user_lastname) }}
{{ form_row(registrationForm.email) }}
{{ form_row(registrationForm.plainPassword, {
    label: 'Mot de passe'
}) }}
{{ form_row(registrationForm.plainPassword_second, {
    label: 'Confirmation du mot de passe'
}) }}
{# CONDITION D'ACCORD D'UTILISATION #}
{{ form_row(registrationForm.agreeTerms) }}
{# BOUTON D'INSCRIPTION #}
{# {% if registrationForm.plainPassword == registrationForm.plainPassword_second %} #}
<button type="submit" class="btn btn btn-primary rounded mt-5">S'inscrire</button>
{# {% endif %} #}
{{ form_end(registrationForm) }}

	</div>
    {# FIN CONTAINER #}

	
{% endblock %}
