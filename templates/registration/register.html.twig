{% extends 'base.html.twig' %}
{# MON TITLE #}
{% block title %}Inscription
{% endblock %}

{% block body %}
	{# DEBUT CONTAINER #}
	<div class="container mt-5 mb-5 inscription">
		{% for message in app.flashes('error') %}
			<div class="col-6">
				<div class="mb-5 rounded btn btn-danger">{{ message }}</div>
			</div>
		{% endfor %}
		<h1>Page d'inscription</h1>
		{# L'AFFICHAGE DES ELEMENTS DE MON FORMULAIRE D'INSCRIPTION #}
		{{ form_start(registrationForm) }}
		{{ form_errors(registrationForm) }}
		{{ form_row(registrationForm.user_firstname) }}
		{{ form_row(registrationForm.user_lastname) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
		{{ form_row(registrationForm.plainPassword_second, {
                label: 'Confirmation du mot de passe'
            }) }}
		{# CONDITION D'ACCORD D'UTILISATION #}
		{{ form_row(registrationForm.agreeTerms) }}
		{# BOUTON D'INSCRIPTION #}
		<button type="submit" class="btn btn-primary rounded mt-5">S'inscrire</button>
		{{ form_end(registrationForm) }}
	</div>
	{# FIN CONTAINER #}
{% endblock %}
